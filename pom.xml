		<maven-resources-plugin.ver>2.7</maven-resources-plugin.ver>
		<maven-filtering.ver>1.3</maven-filtering.ver>
		<maven-install-plugin.ver>2.5.2</maven-install-plugin.ver>
		<maven-surefire-plugin.ver>2.18.1</maven-surefire-plugin.ver>
		<junit.ver>4.12</junit.ver>
		<mysql-connector-java.ver>5.1.37</mysql-connector-java.ver>
		<log4j-slf4j-impl.ver>2.3</log4j-slf4j-impl.ver>
		<log4j-web.ver>2.3</log4j-web.ver>
		<commons-lang3.ver>3.4</commons-lang3.ver>
		<commons-collections.ver>3.2.1</commons-collections.ver>
		<commons-lang.ver>2.6</commons-lang.ver>
		<commons-io.ver>2.4</commons-io.ver>
		<commons-beanutils.ver>1.9.2</commons-beanutils.ver>
		<spring-test.ver>4.2.1.RELEASE</spring-test.ver>
		<spring-core.ver>4.2.1.RELEASE</spring-core.ver>
		<spring-webmvc.ver>4.2.1.RELEASE</spring-webmvc.ver>
		<spring-data-jpa.ver>1.9.0.RELEASE</spring-data-jpa.ver>
		<mybatis-spring.ver>1.2.3</mybatis-spring.ver>
		<spring-data-redis.ver>1.6.0.RELEASE</spring-data-redis.ver>
		<kie-spring.ver>6.2.0.Final</kie-spring.ver>
		<spring-batch-core.ver>3.0.5.RELEASE</spring-batch-core.ver>
		<spring-rabbit.ver>1.5.0.RELEASE</spring-rabbit.ver>
		<quartz.ver>2.2.2</quartz.ver>
		<spring-ws-core.ver>2.2.3.RELEASE</spring-ws-core.ver>
		<commons-httpclient.ver>3.1</commons-httpclient.ver>
		<javax.servlet-api.ver>3.1.0</javax.servlet-api.ver>
		<jackson-databind.ver>2.6.1</jackson-databind.ver>
		<jstl.ver>1.2</jstl.ver>
		<c3p0.ver>0.9.5.1</c3p0.ver>
		<hibernate-jpa-2.1-api.ver>1.0.0.Final</hibernate-jpa-2.1-api.ver>
		<hibernate-entitymanager.ver>5.0.1.Final</hibernate-entitymanager.ver>
		<mybatis.ver>3.3.0</mybatis.ver>
		<jedis.ver>2.7.3</jedis.ver>
		<mail.ver>1.4.7</mail.ver>
		<httpclient.ver>4.5</httpclient.ver>
		<bcprov-jdk16.ver>1.46</bcprov-jdk16.ver>
		<jibx-bind.ver>1.2.6</jibx-bind.ver>
		<axiom-impl.ver>1.2.14</axiom-impl.ver>
	</properties>

	<profiles>
		<profile>
			<id>dev</id>
			<properties>
				<env>dev</env>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<env>test</env>
			</properties>
		</profile>
		<profile>
			<id>prod</id>
			<properties>
				<env>prod</env>
			</properties>
		</profile>
	</profiles>

	<build>
		<finalName>nuwa</finalName>
		<filters>
			<filter>src/main/env/${env}-conf.properties</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>nuwa.properties</include>
					<include>log4j2.json</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>nuwa.properties</exclude>
					<exclude>log4j2.json</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.ver}</version>
				<configuration>
					<source>${java.ver}</source>
					<target>${java.ver}</target>
					<encoding>${build.encoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${maven-resources-plugin.ver}</version>
				<configuration>
					<encoding>${build.encoding}</encoding>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.shared</groupId>
						<artifactId>maven-filtering</artifactId>
						<version>${maven-filtering.ver}</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>${maven-surefire-plugin.ver}</version>
				<configuration>
					<parallel>methods</parallel>
					<threadCount>10</threadCount>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-install-plugin
										</artifactId>
										<versionRange>
											[maven-install-plugin.ver,)
										</versionRange>
										<goals>
											<goal>install-file</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

