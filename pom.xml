		</repository>
		<repository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central2</id>
			<name>CentralRepository2</name>
			<url>http://repo2.maven.apache.org/maven2</url>
		</repository>
		<repository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central3</id>
			<name>CentralRepository3</name>
			<url>http://repo.spring.io/libs-release-remote</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central1</id>
			<name>CentralRepository1</name>
