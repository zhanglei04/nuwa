{
    "configuration":{
        "status":"warn",
        "strict":"true",
        "name":"Log4j2Config",
        "monitorInterval":"30",
        "properties":{
            "property":[
                {
                    "name":"level",
                    "value":"INFO"
                },
                {
                    "name":"pattern",
                    "value":"%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"
                },
                {
                    "name":"filename",
                    "value":"${web:rootDir}/../logs/nuwa.log"
                },
                {
                    "name":"filepattern",
                    "value":"${web:rootDir}/../logs/nuwa-%d{yyyy-MM-dd}-%i.log"
                }
            ]
        },
        "appenders":{
            "appender":[
                {
                    "type":"Console",
                    "name":"stdout",
                    "target":"SYSTEM_OUT",
                    "PatternLayout":{
                        "pattern":"${pattern}"
                    },
                    "filters":{
                        "filter":[
                            {
                                "type":"ThresholdFilter",
                                "level":"${level}",
                                "onMatch":"ACCEPT",
                                "onMismatch":"NEUTRAL"
                            }
                        ]
                    }
                },
                {
                    "type":"RollingFile",
                    "name":"file",
                    "fileName":"${filename}",
                    "filePattern":"${filepattern}",
                    "PatternLayout":{
                        "pattern":"${pattern}"
                    },
                    "filters":{
                        "filter":[
                            {
                                "type":"ThresholdFilter",
                                "level":"${level}",
                                "onMatch":"ACCEPT",
                                "onMismatch":"NEUTRAL"
                            }
                        ]
                    },
                    "SizeBasedTriggeringPolicy":{
                        "size":"10 MB"
                    },
                    "DefaultRolloverStrategy":{
                        "max":"10"
                    }
                }
            ]
        },
        "loggers":{
            "root":{
                "level":"${level}",
                "AppenderRef":[
                    {
                        "ref":"stdout"
                    },
                    {
                        "ref":"file"
                    }
                ]
            }
        }
    }
}